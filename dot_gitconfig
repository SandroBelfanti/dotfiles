[user]
        name = 
        email = 
[color]
        branch = auto
        diff = auto
        status = auto
        pager = true

######
# This part is taken from here: https://blog.gitbutler.com/how-git-core-devs-configure-git/

[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[init]
        defaultBranch = main
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true

# why the hell not?

[help]
        autocorrect = prompt
[commit]
        verbose = true
[rerere]
        enabled = true
        autoupdate = true
[core]
        excludesfile = ~/.gitignore
[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true
[pull]
        rebase = true

##### Other general configs
[core]
        pager = less -R
[push]
    default = current

##### Tool configuration
[diff]        
        tool = meld 
[difftool "vscode"]
        cmd = code --wait --diff $LOCAL $REMOTE
[difftool "meld"]
        cmd = meld $LOCAL $REMOTE
[merge]
        tool = vscode
[mergetool "vscode"]
        cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[mergetool "meld"]
    cmd = meld --diff $BASE $LOCAL $REMOTE --output $MERGED

##### Aliases
[alias]
        d = difftool
        slog = log --name-status
        flow = log --pretty-fuller
        lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
        lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
        lg = !"git lg1"
        log1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(magenta)<%an>%Creset' --abbrev-commit --date=relative
        # -w: ignore whitespace, -C -C -C detects if lines were moved/copied to find the original author.
        blame = blame -w -C -C -C
        



